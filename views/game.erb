<main>
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        I am now hosting a session at <strong id="code">????</strong>.
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <h1>Players</h1>
        <ul id="player-list" class="list-group">
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <input type="text" id="info-message" class="form-control" placeholder="Informational Message"></input>
      </div>
      <div class="col-md-4">
        <button id="send-info-message" class="btn btn-secondary">Send Info Message</button>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8">
        <input type="text" id="freeform-message" class="form-control" placeholder="Freeform Question"></input>
      </div>
      <div class="col-md-4">
        <button id="send-freeform-message" class="btn btn-secondary">Send Freeform Question</button>
      </div>
    </div>

    <script type="module">
     import { setupNewGame } from '/main.js';
     $(setupNewGame)
    </script>
  </div>
</main>
