<main>
  <div class="container">

    <div class="row">
      <div class="col-md-6">
        <label for="code">Game Code:</label>
        <input type="text" id="code" class="form-control" style="text-transform: uppercase" maxlength="4"></input>
      </div>
      <div class="col-md-6">
        <label for="code">Your Name:</label>
        <input type="text" id="player-name" class="form-control" maxlength="15"></input>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <button id="submit" class="btn btn-primary form-control">Join Game</button>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        Status: <span id="connection-status"></span>
      </div>
    </div>

    <script type="module">
     import { setupConnectPage } from '/connect_page.js';
     $(setupConnectPage);
    </script>
  </div>
</main>
